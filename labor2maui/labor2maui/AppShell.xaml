<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="labor2maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:labor2maui"
    Shell.FlyoutBehavior="Disabled"
    Title="labor2maui">


    <TabBar>
        <ShellContent
             Title="Home"
             ContentTemplate="{DataTemplate local:MainPage}"
             Route="MainPage" />
        
        <ShellContent
             Title="Colors"
             ContentTemplate="{DataTemplate local:ColorPage}"
             Route="csiguszz" />

        <ShellContent
             Title="Slider"
             ContentTemplate="{DataTemplate local:Sliderke}"
             Route="Sliderke" />
    </TabBar>

</Shell>
